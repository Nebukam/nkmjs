{
    "name": "nkmjs",
    "private": true,
    "workspaces": [
        "./packages/*"
    ],
    "devDependencies": {
        "lerna": "^6.6.2"
    },
    "scripts": {
        "nkmjs": "nkmjs",
        "bootstrap": "lerna bootstrap && yarn add-nkmjs-link",
        "add-nkmjs-link": "lerna run --parallel yarn --if-present link-nkmjs",
        "link-all": "yarn unlink-all && lerna exec --parallel yarn link",
        "unlink-all": "lerna run --parallel --bail=false yarn unlink"
    }
}