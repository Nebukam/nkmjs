{
    "tasks": {
        "test": [
            "task-tests"
        ],
        "bootstrap": [
            "task-bootstrap-project"
        ],
        "start": [
            "task-start-electron",
            "task-cleanup"
        ],
        "build": [
            "task-build",
            "task-cleanup"
        ],
        "start-debug": [
            [
                "task-styles-fetch",
                {
                    "replace": true,
                    "append": true
                }
            ],
            [
                "task-start-electron",
                {
                    "delete-inlined-files": false,
                    "rebuild-styles": true,
                    "dev": true
                }
            ],
            "task-cleanup"
        ],
        "build-www": [
            "task-build-www",
            "task-cleanup"
        ],
        "build-pwa": [
            "task-build-pwa",
            "task-cleanup"
        ],
        "build-ext": [
            "task-build-ext",
            "task-cleanup"
        ],
        "build-all": [
            "task-build-www",
            "task-build-pwa",
            "task-build-ext",
            "task-build-electron",
            "task-cleanup"
        ],
        "build-all-www": [
            "task-build-www",
            "task-build-pwa",
            "task-build-ext",
            "task-cleanup"
        ],
        "build-electron": [
            "task-build-electron",
            "task-cleanup"
        ],
        "package-electron": [
            [
                "task-build-electron",
                {
                    "pack-only": true
                }
            ],
            "task-cleanup"
        ],
        "fetch-styles": [
            [
                "task-styles-fetch",
                {
                    "replace": true,
                    "append": true
                }
            ],
            "task-cleanup"
        ],
        "fetch-and-build-styles": [
            [
                "task-styles-fetch",
                {
                    "replace": true,
                    "append": true
                }
            ],
            "task-styles-build",
            "task-cleanup"
        ],
        "post-install": [
            "task-post-install",
            "task-cleanup"
        ]
    },
    "externals": [
        "@nkmjs/core"
    ],
    "name": "@nkmjs/core-dev",
    "longName": "@nkmjs/core-dev Verbose App Name",
    "shortName": "@nkmjs/core-dev App",
    "description": "NKMjs Framework Core Dev Tools",
    "homepage": "https://www.@nkmjs/core-dev.com",
    "app": {
        "display": "standalone",
        "orientation": "portrait",
        "colorTheme": "#1e1e1e",
        "theme": "default"
    },
    "extension": {
        "manifest_version": 2,
        "popup": {
            "width": 800,
            "height": 600
        },
        "display": "standalone",
        "permissions": [
            "storage"
        ],
        "hostPermissions": [
            "%homepage%"
        ]
    },
    "builds": []
}