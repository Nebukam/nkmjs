{
    /* Required */
    "manifest_version": 2,
    "name": "$longName",
    "short_name": "$shortName",
    "version": "$version",
    "version_name": "$short_name $version",
    "homepage_url": "$homepage",
  
    /* Recommended */
    "lang": "en",
    "description": "$description",
    "icons": %icons%,
  
    /* Pick one (or none) */
    /* Button to open a popup */
    "browser_action": { 
        "default_icon": %icons%,
          "default_title": "$longName",
          "default_popup": "index.html"
    }, 
    /* Button that is contextual to a page -- hence means specific stuffs & permissions */
    "page_action": { 
        "default_icon": %icons%,
          "default_title": "$longName",
          "default_popup": "index.html"
    },
  
    /* Optional */
    "author": "$author",
    "background": {
      /* Recommended */
      "persistent": false,
      /* Optional */
      "service_worker": "$service_worker"
    },
    "commands": { /* see https://developer.chrome.com/docs/extensions/reference/commands/ */ },
    "content_scripts": [{...}],
    "externally_connectable": {
        "ids": ["xxxxx", "*"],
        "matches": ["*://*.example.com/*"]
    },
    
    "import": [{"id": "aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"}],
    "minimum_chrome_version": "87",
    "offline_enabled": true,
    "optional_permissions": ["tabs"],
    "options_page": "options.html",
    "options_ui": {
      "chrome_style": true,
      "page": "options.html"
    },
    "permissions": ["storage"],
    "update_url": "http://path/to/updateInfo.xml",
    "web_accessible_resources": [
        /**/
    ]
  }